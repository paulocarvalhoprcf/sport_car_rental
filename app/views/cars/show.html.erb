<div class="banner" id="car" style="background-image: linear-gradient(rgba(0, 0, 0, 0.6),rgba(0, 0, 0, 0.6)), url(<%=image_path 'mustang_home.jpg'%>);">
<%# <div class='body'> %>
  <div class='container'>
    <div class="card-car">
      <img src=<%= @car.img_url %> />
      <div class="card-car-infos">
        <div>
          <h2><%= @car.model %></h2>
        </div>
        <div>
          <h3 class="card-car-pricing">Price per day: <strong>$ <%= @car.price %></strong> only.</h3>
        </div>
      </div>
      <div>
        <h6 class="ml-4 mr-4"><%= @car.short_description %></h6>
      </div>
    </div>
  </div>
  <br>
  <div class='button-links'>
    <% if current_user.admin? %>
      <%= link_to 'See bookings', car_bookings_path(@car.id), class: "btn btn-gradient" %>
      <%= link_to 'Delete Car', car_path(@car.id), method: :delete, data: { confirm: "Are you sure do you want to delete this car?" }, class: "btn btn-gradient" %>
      <%= link_to 'Back to cars', cars_path, class: "btn btn-gradient" %>
    <% else %>
      <%= link_to "Search for a date", new_car_booking_path(@car), class: "btn btn-gradient" %>
      <%= link_to 'Back to cars', cars_path, class: "btn btn-gradient" %>
    <% end %>
  </div>
</div>
