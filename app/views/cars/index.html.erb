<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.75),rgba(0,0,0,0.75)), url(<%=image_path 'mustang_home.jpg'%>);">
<div class="container d-block">
  <h1 class="d-flex justify-content-center">Choose your sport car</h1>
  <br>
  <div class="cards">
    <% @cars.each do |car| %>
      <a class="card" href="cars/<%= car.id %>" style="background-image: url(<%= car.img_url %>)"></a>
    <% end %>
  </div>
  <br>
  <p class="d-flex justify-content-center">
    <%= link_to 'Back to home', root_path, class: "btn btn-gradient" %>
  </p>
</div>
<br>
