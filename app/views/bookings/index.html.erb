<div>
  <%# <h1>Your Bookings for <%=Car.find(@booking.first.car_id).model if Car.find(@booking.first.car_id).model != nil%></h1> %>
  <%if Car.find(@booking.first.car_id).model != nil%>
    <h1>Your Bookings for <%=Car.find(@booking.first.car_id).model %></h1>
  <% else %>
    <h1>You don't have a booking for this car yet</h1>
  <% end %>
</div>
<div class="container">
  <br>
  <div class="cards">
    <% @booking.each do |bkng| %>
    <div class="card-product d-block">
      <p><%= bkng.starting_date %></p>
      <p><%= bkng.ending_date %></p>
      <p> Total ($): <%= ((bkng.ending_date - bkng.starting_date).to_f *  bkng.car.price).round(2) %></p>
    </div>
    <% end %>
  </div>
</div>
<div>
  <%= link_to 'Back to cars', cars_path , class: "btn btn-gradient"%>
</div>
