<div>
  <%if Booking.where(car_id: params[:car_id]).first != nil%>
    <h1>Your Bookings for <%=Car.find(@booking.first.car_id).model %></h1>
  <% else %>
    <h1>You don't have a booking for this car yet</h1>
  <% end %>
</div>
<div class="container">
  <br>
  <div class="cards">
    <% @booking.each do |bkng| %>
    <div class="card-product d-block">
      <p><%= bkng.starting_date %></p>
      <p><%= bkng.ending_date %></p>
      <span>
      <h6> Total ($): <%= ((bkng.ending_date - bkng.starting_date).to_f *  bkng.car.price).round(2) %></h6>
      <p><%= link_to "Delete", booking_path(bkng), method: :delete, data: { confirm: "Are you sure?" } %></p>
      <p><%= link_to "Update", edit_booking_path(bkng), data: { confirm: "Are you sure?" } %> </p>
    </div>
    <% end %>
  </div>
</div>
<div>
  <%= link_to 'Back to cars', cars_path , class: "btn btn-gradient"%>
</div>
