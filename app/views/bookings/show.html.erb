<h1>Your Booking</h1>
<div class="container">
  <ul class="list-group-item">
    <li>
      <h3> Car: <%= @booking.car.model %></h3>
      <p>From: <%= @booking.starting_date %></p>
        <p>To: <%= @booking.ending_date %></p>
        <p> Total ($): <%= ((@booking.ending_date - @booking.starting_date).to_f *  @booking.car.price).round(2) %></p>
        <%= link_to "Delete date",
                    booking_path(@booking),
                    method: :delete,
                    data: { confirm: "Are you sure?" }, class: "btn btn-gradient" %>
        <%= link_to "Update",
                    edit_booking_path(@booking),
                    data: { confirm: "Are you sure?" }, class: "btn btn-gradient" %>
        <%= link_to 'Back to cars', cars_path , class: "btn btn-gradient"%>
    </li>
  </ul>
</div>
