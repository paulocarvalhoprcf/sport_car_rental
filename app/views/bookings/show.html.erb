<br>
<div class="container justify-content-center">
  <h1>Your Booking</h1>
</div>
<br>
<div class="container justify-content-center">
  <div class="row">
      <div class="col">
    <% Booking.where(user_id: current_user).each do |booking| %>
        <div class="card-product">
          <img src="<%= booking.car.img_url%>"/>
          <div class="card-product-infos">
            <h2><%= booking.car.model %></h2>
            <p>From: <%= booking.starting_date %>  To: <%= booking.ending_date %></p>
            <p>Total ($): <%= ((booking.ending_date - booking.starting_date).to_f *  booking.car.price).round(2) %></p>
          </div>
        </div>
          <div class="row d-inline">
              <%= link_to "Delete date",
                        booking_path(@booking),
                        method: :delete,
                        data: { confirm: "Are you sure?" }%>
              <%= link_to "Update",
                        edit_booking_path(@booking),
                        data: { confirm: "Are you sure?" }%>
              <%= link_to 'Back to cars', cars_path%>
          </div>
    <% end %>
      </div>
  </div>
</div>
