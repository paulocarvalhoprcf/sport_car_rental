<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <a class="navbar-brand" href="/">
    <%= image_tag "car-logo.png", alt: "app-logo", class: 'bg-transparent'%>
  </a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <% if current_user.admin? %>
          <li class="nav-item active">
            <%= link_to 'New Cars', new_car_path, class: "btn btn-gradient" %>
          </li>
          <li class="nav-item active">
            <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: "btn btn-gradient"%>
          </li>
        <% elsif Booking.where(user_id: current_user).first == nil %>
          <li class="nav-item active">
            <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: "btn btn-gradient"%>
          </li>
        <% else %>
          <li class="nav-item active">
            <%= link_to 'My Bookings', booking_path(Booking.where(user_id: current_user).last.id), class: "btn btn-gradient"%>
          </li>
          <li class="nav-item active">
            <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: "btn btn-gradient"%>
          </li>
        <% end %>
      <% else %>
        <% if controller_name == 'sessions' || controller_name == 'registrations' %>
        <% else %>
          <li class="nav-item active">
              <%= link_to 'Sign Up Here!', new_user_registration_path, class: "btn btn-gradient" %>
          </li>
          <li class="nav-item active">
              <%= link_to 'Login', user_session_path, class: "btn btn-gradient" %>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>
