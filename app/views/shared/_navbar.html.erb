        <% else %>
          <li class="nav-link">
              <%= link_to 'Sign Up Here!', new_user_registration_path %>
          </li>
          <li class="nav-link">
              <%= link_to 'Login', user_session_path %>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
