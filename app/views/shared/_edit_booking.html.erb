<br>
<%= simple_form_for [ @car, @booking ] do |f| %>
  <div class="form-inline justify-items-center">
    <%= f.input :starting_date, as: :date, html5: true %>
    <span></span>
    <%= f.input :ending_date, as: :date, html5: true %>
  </div>
  <br>
  <div class="d-flex justify-content-center">
    <%= f.submit "Submit a booking date", method: :update, class: "btn btn-gradient" %>
    <%= link_to 'Back to cars', cars_path, class: "btn btn-gradient" %>
  </div>
<% end %>
