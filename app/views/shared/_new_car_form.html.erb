<%= simple_form_for(@car) do |f| %>
  <%= f.input :model, class: "form-control" %>
  <%= f.input :manufacturer, class: "form-control" %>
  <%= f.input :year, class: "form-control" %>
  <%= f.input :img_url, class: "form-control" %>
  <%= f.input :photo, as: :file, class: "form-control" %>
  <%= f.input :price, class: "form-control" %>
  <div class="row justify-content-center">
  <%= f.submit class: 'btn btn-gradient' %>
  </div>
<% end %>

